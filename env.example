# ============================================================================
# Texas Hold'em AI Battle Simulator - Environment Configuration
# ============================================================================
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control!
# ============================================================================

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# PostgreSQL connection string
DATABASE_URL=postgresql://postgres:Admin@123@localhost:5432/postgres

# Database pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=100
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50

# ============================================================================
# API CONFIGURATION
# ============================================================================
# FastAPI server settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# API security
API_SECRET_KEY=your-secret-key-change-this-in-production
API_ACCESS_TOKEN_EXPIRE_MINUTES=30
API_REFRESH_TOKEN_EXPIRE_DAYS=7

# API rate limiting
API_RATE_LIMIT_PER_MINUTE=100
API_RATE_LIMIT_BURST=50

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOW_HEADERS=*

# ============================================================================
# AI CONFIGURATION
# ============================================================================
# Default AI settings
DEFAULT_AI_TIMEOUT=5000
MAX_AI_RETRIES=3
AI_RETRY_BACKOFF_MULTIPLIER=1.5
AI_HEALTH_CHECK_INTERVAL=60

# Built-in AI strategies enabled
ENABLE_BUILTIN_AI=true

# ============================================================================
# GAME ENGINE CONFIGURATION
# ============================================================================
# Game rules
MIN_PLAYERS=2
MAX_PLAYERS=9
DEFAULT_SMALL_BLIND=5
DEFAULT_BIG_BLIND=10
DEFAULT_BUY_IN=1000

# Rake settings
ENABLE_RAKE=false
RAKE_PERCENTAGE=2.5
MAX_RAKE=50

# Game timeouts
PLAYER_ACTION_TIMEOUT=30
GAME_IDLE_TIMEOUT=3600

# ============================================================================
# WEBSOCKET CONFIGURATION
# ============================================================================
WS_PING_INTERVAL=25
WS_PING_TIMEOUT=10
WS_MAX_CONNECTIONS=1000

# ============================================================================
# CELERY (BACKGROUND TASKS)
# ============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/poker-simulator.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=10

# ============================================================================
# ANALYTICS CONFIGURATION
# ============================================================================
ENABLE_ANALYTICS=true
ANALYTICS_AGGREGATION_INTERVAL=300
ENABLE_GTO_ANALYSIS=true
ENABLE_HAND_REPLAY=true

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
# Password hashing
BCRYPT_ROUNDS=12

# Session management
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# API key settings
API_KEY_PREFIX_LENGTH=8
API_KEY_TOTAL_LENGTH=64

# ============================================================================
# FILE STORAGE
# ============================================================================
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=json,csv

# ============================================================================
# MONITORING & METRICS
# ============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_ENDPOINT=true

# ============================================================================
# DEVELOPMENT / PRODUCTION
# ============================================================================
ENVIRONMENT=development
DEBUG=true
RELOAD=true

# ============================================================================
# TESTING
# ============================================================================
TEST_DATABASE_URL=postgresql://postgres:Admin@123@localhost:5432/postgres_test

